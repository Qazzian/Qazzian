
" Indents"
set tabstop=4
set shiftwidth=4

set ai "Auto indent"
set si "Smart indent"
set wrap "Wrap lines"

:set number

syntax enable

set encoding=utf8

" enable mouse control "
if has('mouse')
  set mouse=a
endif

set hlsearch

" Show matching brackets when text indicator is over them"
set showmatch 
" How many tenths of a second to blink when matching brackets"
set mat=2
